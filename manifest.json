{
  "manifest_version": 2,

  "name": "BuzzOff",
  "description": "Let's kill BuzzFeed and other clickbait together.",
  "version": "0.4.0",

  "permissions": [
    "tabs",
    "https://www.facebook.com/",
    "http://www.facebook.com/",
    "storage"
  ], 
  "icons": {
    "128": "images/BuzzOff128.png"
  },
  "background": {
    "scripts": ["js/bootstrap.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "BuzzOff",
    "default_popup": "popup.html",
    "scripts": "js/popup.js"
  }

}
